<p id="notice"><%= notice %></p>

<h1 class= 'text-center'>Tweets</h1>
<br>
<form class= 'form-inline-center'>
<input type= 'Search' placeholder='Search'>
<button type='Submit'> Buscar</button>
</form>
<br>
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">User</th>
      <th scope="col">Content</th>
      <th scope="col">Photo</th>
      <th scope="col">Likes</th>
      <th scope="col">Retweets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user_id %></td>
        <td><%= tweet.content %></td>
        <td><%= image_tag tweet.user.photo, height:200, width:300 %></td>
        <td><%= tweet.likes.count %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-info text-white' %>
